<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
								   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	android:orientation="vertical"
	app:cardCornerRadius="2dp"
	app:cardElevation="2dp"
	app:cardUseCompatPadding="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tvName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="bold"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvResId"
			app:layout_constraintTop_toBottomOf="@+id/tvName"
			app:layout_constraintStart_toEndOf="@+id/tvLabelResId"
			android:layout_marginStart="8dp"/>
		<TextView
			android:text="Reservation id:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvLabelResId"
			app:layout_constraintStart_toStartOf="@+id/tvName"
			app:layout_constraintTop_toBottomOf="@+id/tvName" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>