<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".screens.profile.ProfileFragment">

        <TextView
                android:text="Username:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLabelUsername" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername" app:layout_constraintStart_toEndOf="@+id/tvLabelUsername"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@+id/tvLabelUsername"/>
        <TextView
                android:text="Full name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLabelFullName"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelUsername" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFullName"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelUsername"
                app:layout_constraintStart_toEndOf="@+id/tvLabelFullName" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Label:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLabelEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFullName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                app:layout_constraintTop_toTopOf="@+id/tvLabelEmail"
                app:layout_constraintStart_toEndOf="@+id/tvLabelEmail"
                android:layout_marginStart="4dp"/>
        <TextView
                android:text="Address:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLabelAddress" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/tvLabelEmail"
                android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStreet"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelAddress" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCity" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvStreet" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>