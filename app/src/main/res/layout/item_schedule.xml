<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	app:cardCornerRadius="2dp"
	app:cardElevation="1dp"
	app:cardUseCompatPadding="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tvCheckIn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="16dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

		<TextView
			android:id="@+id/tvDivider"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:text="-"
			app:layout_constraintBottom_toBottomOf="@+id/tvCheckIn"
			app:layout_constraintStart_toEndOf="@+id/tvCheckIn"
			app:layout_constraintTop_toTopOf="@+id/tvCheckIn"/>

		<TextView
			android:id="@+id/tvCheckOut"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			app:layout_constraintBottom_toBottomOf="@+id/tvDivider"
			app:layout_constraintStart_toEndOf="@+id/tvDivider"
			app:layout_constraintTop_toTopOf="@+id/tvDivider"/>

		<TextView
			android:id="@+id/tvLabelPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="8dp"
			android:text="Price:"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="@+id/tvCheckIn"
			app:layout_constraintTop_toBottomOf="@+id/tvCheckIn"/>

		<TextView
			android:id="@+id/tvPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			app:layout_constraintBottom_toBottomOf="@+id/tvLabelPrice"
			app:layout_constraintStart_toEndOf="@+id/tvLabelPrice"
			app:layout_constraintTop_toTopOf="@+id/tvLabelPrice"/>

		<TextView
			android:id="@+id/tvActionRemove"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:text="Remove"
			android:textColor="@android:color/holo_blue_dark"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>